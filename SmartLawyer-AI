// script.js
function playWelcome(){
  document.getElementById('welcomeSound').play();
  setTimeout(()=>alert("بسم الله ماشاء الله ولا حول ولا قوة إلا بالله\nمرحباً بك معالي المستشار أحمد نور\nلقد تم تشغيل البرنامج بنجاح"),1000);
}
function showMain(){
  document.querySelector('.card').innerHTML=`
    <h1>أهلاً بك</h1>
    <button class="btn" onclick="openSection('cases')">القضايا</button>
    <button class="btn" onclick="openSection('contracts')">العقود</button>
    <button class="btn" onclick="openSection('users')">المستخدمين</button>
    <button class="btn" onclick="openSection('ai')">المحامي الذكي</button>
  `;
}
function openSection(sec){alert("قسم "+sec+" جاهز الآن");}
